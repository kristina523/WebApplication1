@model WebApplication1.Models.Catalog
@{
    ViewData["Title"] = "Details";
}

<h2>Product Details</h2>

<div class="product-details">
    <dl class="row">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.IdProduct</dd>
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>
        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Html.Raw(Model.Description ?? "")</dd>
        <dt class="col-sm-3">Category</dt>
        <dd class="col-sm-9">@Model.Category</dd>
        <dt class="col-sm-3">Size</dt>
        <dd class="col-sm-9">@Model.Size</dd>
        <dt class="col-sm-3">Color</dt>
        <dd class="col-sm-9">@Model.Color</dd>
        <dt class="col-sm-3">Price</dt>
        <dd class="col-sm-9">@Model.Price.ToString("C")</dd>
        <dt class="col-sm-3">Stock Quantity</dt>
        <dd class="col-sm-9">@Model.StockQuantity</dd>
    </dl>


    <h3>Discounts</h3>
    @if (Model.Discounts.Any())
    {
        <ul>
            @foreach (var discount in Model.Discounts)
            {
                <li>Discount: @discount.DiscountPercent%</li>
            }
        </ul>
    }
    else
    {
        <p>No discounts available.</p>
    }

    <h3>Reviews</h3>
    @if (Model.Reviews.Any())
    {
        <ul>
            @foreach (var review in Model.Reviews)
            {
                <li>Rating: @review.Rating - Comment: @Html.Raw(review.Comment ?? "")</li>
            }
        </ul>
    }
    else
    {
        <p>No reviews yet.</p>
    }

</div>
<div>
    <a asp-action="EditCatalog" asp-route-id="@Model.IdProduct">EditCatalog</a> |
    <a asp-action="Catalog">Back to List</a>
</div>